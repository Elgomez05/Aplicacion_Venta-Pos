<PopupVenta>:
	title: 'Detalles de ventas'
    size_hint: .6, .6
    BoxLayout:
        orientation: 'vertical'
		spacing: 10
        padding: 10
        Label:
            text: 'Ingrese el usuario:'
        
        TextInput:
            id: usuario_input
            hint_text: 'Escribe el usuario aqu칤'
            multiline: False
        Label:
            text: 'Seleccionar fecha'
			size_hint_x: .52
        BoxLayout:
            orientation: 'horizontal'
            TextInput:
                id: single_date_input
                hint_text: 'Fecha especifica (dd/mm/aa)'
                multiline: False
            Button:
                text: 'Hoy'
                on_release: root.select_today()
