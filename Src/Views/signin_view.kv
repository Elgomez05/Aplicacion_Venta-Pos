#:import hex kivy.utils.get_color_from_hex

<SigninWindow>:
    orientation: 'vertical'
    canvas.before:
        #Color:
            #rgba: hex('#338e8e')
        Rectangle:
            #source: 'Src/Asset/Img-venta-Pos.png'
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: 0.05
    BoxLayout:
        size_hint_y: 0.9
        canvas.before:
            Color:
                rgba: hex('#e7f8f8')
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            size_hint_x: 0.3
        BoxLayout:
            size_hint_x: 0.4
            orientation: 'vertical'
            Label:
                size_hint_y: 0.15
                font_size: '20sp'
                text: 'Bienvenido'
                color: (0, 0, 0, 1)
            Label:
                id: signin_notificacion
                size_hint_y: 0.15
                color: hex('#fa0f04')
            TextInput:
                id: username
                size_hint_y: 0.1
                hint_text: 'Nombre de usuario'
                multiline: False
                write_tab: False
                on_text_validate: root.verificar_usuario(self.text, password.text, recordar_checkbox.active)
            TextInput:
                id: password
                size_hint_y: 0.1
                hint_text: 'Contrase√±a'
                multiline: False
                write_tab: False
                password: True
                on_text_validate: root.verificar_usuario(username.text, self.text, recordar_checkbox.active)

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.1
                
                CheckBox: 
                    id: recordar_checkbox
                    size_hint_x: 0.2
                Label:
                    text: 'Recordar usuario'
                    size_hint_x: .80
                    color: (0, 0, 0, 1)
            Button:
                size_hint_y: 0.1
                background_normal: ''
                background_color: (0, 0, 0, 1)
                text: 'Ingresar'
                on_release: root.verificar_usuario(username.text, password.text, recordar_checkbox.active)
            Label:
                size_hint_y: 0.4
        Label:
            size_hint_x: 0.3
    BoxLayout:
        size_hint_y: 0.05
